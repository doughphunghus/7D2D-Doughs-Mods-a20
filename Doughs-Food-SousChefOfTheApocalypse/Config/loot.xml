  </append>
  <append xpath="/lootcontainers/lootgroup[@name='groupIngredientsRare']"> <!-- meat/proteins. things that go bad quickly -->
    <item name="doughsFoodRawSweetBread" count="1,2" prob="0.1"/>
    <item name="doughsFoodButter" count="1,2" prob="0.1"/>
    <item name="doughsFoodCheese" count="1,2" prob="0.1"/> <!-- meh, this is a tough one for "shelf life" BUT a high end item for my mod -->
  </append>

  <!-- A20_Food_Groups -->
  <append xpath="/lootcontainers/lootgroup[@name='groupFoodCommon']"> <!-- canned vegetables/fruit/charred meat -->
    <item name="doughsFood_RuninedFoodCold_GrilledMeat" count="1,2" prob="0.1"/>
  </append>
  <append xpath="/lootcontainers/lootgroup[@name='groupFoodPileCommon']"> <!-- canned fruit/veg some meat. charred meat -->
    <item name="doughsFoodHardTack" count="1,2" prob="0.1"/>
